<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd">

    <!--扫描service相关的bean-->
    <context:component-scan base-package="cn.conststar.wall.service"/>

    <!--注入到IOC容器中-->
    <bean id="servicePost" class="cn.conststar.wall.service.ServicePost">
        <property name="mapperPost" ref="mapperPost"/>
    </bean>
    <bean id="serviceComment" class="cn.conststar.wall.service.ServiceComment">
        <property name="mapperComment" ref="mapperComment"/>
    </bean>
    <bean id="serviceUser" class="cn.conststar.wall.service.ServiceUser">
        <property name="mapperUser" ref="mapperUser"/>
    </bean>

    <!-- 配置事务管理器 -->
    <bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <!-- 注入数据库连接池 -->
        <property name="dataSource" ref="dataSource"/>
    </bean>

</beans>